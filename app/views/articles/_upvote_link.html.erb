<%= content_tag "div", id: "upvote-#{article.id}" do %>
    <% if user_signed_in? %>
        <%= link_to upvote_article_path(article), method: :patch, remote: true, data: { disable_with: "voting..." } do %>
            <% if current_user.voted_up_on? article %>
            <i class="fas fa-thumbs-up"></i>
            <% else %>
            <i class="far fa-thumbs-up"></i>
            <% end %>
            <%= article.get_upvotes.size %>
        <% end %>
    <% else %>
        <%= link_to upvote_article_path(article), method: :patch, remote: true, data: { disable_with: "voting..." } do %>
          
            <i class="far fa-thumbs-up"></i>
           
            <%= article.get_upvotes.size %>
        <% end %>
    <% end %>
<% end %>
